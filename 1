<body>
    <h1>DeepSeek API Tester</h1>
    
    <div class="container">
        <div>
            <label for="apiKey">API Key:</label>
            <input type="password" id="apiKey" placeholder="Введите ваш DeepSeek API ключ">
        </div>
        
        <div>
            <label for="model">Model:</label>
            <input type="text" id="model" value="deepseek-chat">
        </div>
        
        <div>
            <label for="systemMessage">System Message:</label>
            <textarea id="systemMessage">You are a helpful assistant.</textarea>
        </div>
        
        <div>
            <label for="userMessage">User Message:</label>
            <textarea id="userMessage">Hello!</textarea>
        </div>
        
        <div>
            <label>
                <input type="checkbox" id="streamCheckbox">
                Stream response
            </label>
        </div>
        
        <button id="sendButton">Send Request</button>
        
        <div>
            <label>Response:</label>
            <div id="response" class="response">Ответ появится здесь...</div>
        </div>
    </div>

    <script>
        document.getElementById('sendButton').addEventListener('click', async function() {
            const apiKey = document.getElementById('apiKey').value;
            const model = document.getElementById('model').value;
            const systemMessage = document.getElementById('systemMessage').value;
            const userMessage = document.getElementById('userMessage').value;
            const stream = document.getElementById('streamCheckbox').checked;
            const responseDiv = document.getElementById('response');
            
            if (!apiKey) {
                responseDiv.innerHTML = '<span class="error">Пожалуйста, введите API ключ</span>';
                return;
            }
            
            responseDiv.textContent = "Отправка запроса...";
            
            try {
                const response = await fetch('https://api.deepseek.com/chat/completions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${apiKey}`
                    },
                    body: JSON.stringify({
                        model: model,
                        messages: [
                            {role: "system", content: systemMessage},
                            {role: "user", content: userMessage}
                        ],
                        stream: stream
                    })
                });
                
                if (!response.ok) {
                    const errorData = await response.json();
                    throw new Error(errorData.message || `HTTP error! status: ${response.status}`);
                }
                
                if (stream) {
                    responseDiv.textContent = "Streaming response... (в этом демо потоковый ответ не обрабатывается)";
                    // Для обработки потокового ответа потребуется более сложная логика
                } else {
                    const data = await response.json();
                    responseDiv.textContent = JSON.stringify(data, null, 2);
                }
            } catch (error) {
                responseDiv.innerHTML = `<span class="error">Ошибка: ${error.message}</span>`;
                console.error('Error:', error);
            }
        });
    </script>
</body>
